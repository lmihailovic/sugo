{{ define "main" }}
    <h1>{{ .Title }}</h1>
    <h3> {{ .Description }} </h3>

    <h4>Authors</h4>
    <ul>
        {{ range .Authors -}}
        <li>{{ . }}</li>
        {{ end -}}
    </ul>

    <hr>

    <h3>Articles</h3>
    <ul>
        {{ $sorted := SortPages (GetChildPages "blog" false) "Date" true }}
        {{ range $p := $sorted }}
            <li><a href="{{ $p.Link }}"> [{{ $p.Date }}] {{ $p.Title }} </a></li>
        {{ end }}

    </ul>
    {{ .Content }}
{{ end }}